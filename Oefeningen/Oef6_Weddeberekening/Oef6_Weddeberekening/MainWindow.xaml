        <TextBox x:Name="TxtResultaat" HorizontalAlignment="Left" Margin="28,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="332" Height="145" Background="#FFD1D1D1" IsReadOnly="True"/>
        <TextBox x:Name="TxtNaam" HorizontalAlignment="Left" Margin="28,26,0,0" TextWrapping="Wrap" Text="Naam" VerticalAlignment="Top" Width="120" Height="36"/>
        <TextBox x:Name="TxtUurloon" HorizontalAlignment="Left" Margin="28,67,0,0" TextWrapping="Wrap" Text="Loon" VerticalAlignment="Top" Width="120" Height="36"/>
        <TextBox x:Name="TxtaantalUren" HorizontalAlignment="Left" Margin="28,108,0,0" TextWrapping="Wrap" Text="Aantal uren" VerticalAlignment="Top" Width="120" Height="36"/>

    </Grid>
</Window>

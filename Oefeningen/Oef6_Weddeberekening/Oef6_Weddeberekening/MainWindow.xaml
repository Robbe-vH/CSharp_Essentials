<Window x:Class="Oef6_Weddeberekening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oef6_Weddeberekening"
        mc:Ignorable="d"
        Title="WeddeBerekening" Height="400" Width="400">
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="BtnBereken" Content="Bereken" HorizontalAlignment="Left" Margin="302,26,0,0" VerticalAlignment="Top" Height="36" Width="58" Click="BtnBereken_Click"/>

<Window x:Class="WPF_Controls_Lijsten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Controls_Lijsten"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Width="200">
        <Button Name="BtnVoegToe" Content="Voeg Lid Toe" Margin="20, 10" Click="BtnVoegToe_Click"/>
        <TextBox Name="TxtNaam" Margin="20 ,10" />
        <ListBox Name="LbxNamen" Height="200" Margin="20, 10" SelectionMode="Extended">
            <ListBoxItem Content="Yeet" />
        </ListBox>
        <Button Name="BtnVerwijder" Content="Verwijder" Margin="20" Click="BtnVerwijder_Click"/>
        <Button Name="BtnShowAll" Content="Laat Alles Zien" Margin="20, 10" Click="BtnShowAll_Click" />
    </StackPanel>
</Window>
